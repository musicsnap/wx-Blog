/**index.wxss**/
.carousel{
  width: 100%;
  background-color: rebeccapurple;
}
.carousel_swiper{
  width: 100%;
  height: 400rpx;
  display: block;
  position: relative;
  background: #f4f4f4;
}
.carouselImg{
  width: 100%;
  height: inherit;
}
.grid-list{
  background: rgb(236, 235, 235)
}
.grid-card {
  background: #fff
} 
.grid-image{
  box-sizing: border-box;
  width: 100%;
  height: 400rpx;
  display:flex;
  justify-content: center;
  padding-top: 30rpx;
}
.img{
  width: 100%;
  height: inherit;
  padding-left: 30rpx;
  padding-right: 30rpx;
  vertical-align:middle;
}
.grid-info{
  margin-top: 30rpx;
  padding-left: 30rpx;
  font-size: 26rpx;
}
.grid-title{
  padding-top: 25rpx;
}
.grid-desc{
  margin-top: 8rpx;
  font-size: 24rpx;
  color: #ccc;
  padding-bottom: 20rpx;
  overflow: hidden;
}
.grid-gap{
  height: 30rpx;
  background: rgb(236, 235, 235)
}